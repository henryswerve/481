#exercise 2 DONE


n = 4
    
def evens_and_odds(n: int) -> dict:
    """
    """
    evensum = 0
    oddsum = 0
    dict_1 = {
    'evens': [],
    'odds': [],
    }
    
    for i in range(n):
        if i % 2 == 0:
            evensum += i
        else:
            oddsum += i
    dict_1['evens'].append(evensum)
    dict_1['odds'].append(oddsum)
    return dict_1

print(evens_and_odds(n))

