#exercise 4 DONE

in_list = ['a', 'b', 'c']

def reverse(in_list: list) -> list:
    """
    want to reverse order of list.
    """
    newlist = []
    newlist = list(reversed(in_list))
    
    return newlist

results_4 = reverse(in_list)

print(results_4)

